<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen de la mascota -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/petImageAdoption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dog_placeholder"
                android:contentDescription="Mascota en adopción" />

            <!-- Botón de adoptar flotante -->
            <androidx.cardview.widget.CardView
                android:id="@+id/adoptButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end|top"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#9333EA">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_favorite"
                    app:tint="@android:color/white"
                    android:contentDescription="Adoptar" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <!-- Información de la mascota -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Nombre -->
            <TextView
                android:id="@+id/petNameAdoption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bobby"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Raza -->
            <TextView
                android:id="@+id/petBreed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Golden Retriever"
                android:textSize="11sp"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>