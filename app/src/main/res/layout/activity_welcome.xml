<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:id="@+id/main"
    >

    <!-- Imagen única en el centro superior -->
    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="Imagen del video"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_png"
        app:layout_constraintBottom_toTopOf="@id/bottomCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom White Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="32dp"
        app:cardElevation="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp">

            <!-- Close Button -->
            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                android:layout_marginBottom="24dp"
                android:alpha="0.3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/close"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/ic_close" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="¡Comienzar!"
                android:textColor="#1A1A1A"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:alpha="0.6"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2dp"
                android:text="Regístrate para comenzar, explorar y disfrutar de todas las funciones que nuestra app tiene para ti."
                android:textColor="#1A1A1A"
                android:textSize="14sp" />

            <!-- Continue with Phone Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPhone"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:text="Inicial Sesion"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:backgroundTint="#1E28AD"
                app:cornerRadius="12dp"
                app:elevation="0dp" />

            <!-- Continue with Email Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Registrarme"
                android:textAllCaps="false"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                app:backgroundTint="#F5F5F5"
                app:cornerRadius="12dp"
                app:elevation="0dp" />

            <!-- Social Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Apple Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApple"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="12dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_facebook"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="24dp"
                    app:iconTint="#1E28AD" />

                <!-- Google Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoogle"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="#F5F5F5"
                    app:cornerRadius="12dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_google"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="24dp"
                    app:iconTint="@null" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>