<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del animal -->
        <ImageView
            android:id="@+id/ivAnimalPhoto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:contentDescription="Foto del animal"
            android:src="@drawable/rowailer"
            app:layout_constraintDimensionRatio="H,4:3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/darkOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            app:layout_constraintTop_toTopOf="@id/ivAnimalPhoto"
            app:layout_constraintBottom_toBottomOf="@id/ivAnimalPhoto"
            app:layout_constraintStart_toStartOf="@id/ivAnimalPhoto"
            app:layout_constraintEnd_toEndOf="@id/ivAnimalPhoto" />

        <!-- Capa degradada en la parte inferior -->
        <View
            android:id="@+id/gradientOverlay"
            android:layout_width="0dp"
            android:layout_height="120dp"

            app:layout_constraintBottom_toBottomOf="@id/ivAnimalPhoto"
            app:layout_constraintStart_toStartOf="@id/ivAnimalPhoto"
            app:layout_constraintEnd_toEndOf="@id/ivAnimalPhoto" />

        <!-- Textos y botÃ³n sobre la imagen -->
        <LinearLayout
            android:id="@+id/infoOverlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="@id/ivAnimalPhoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvAnimalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvAnimalBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza Rowailer"
                android:textSize="20sp"
                android:textColor="#E0E0E0"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdopt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Adoptar"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="#E22D60FF"
                app:cornerRadius="20dp"
                app:elevation="0dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
