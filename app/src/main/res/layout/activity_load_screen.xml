<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loadScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background"
    tools:context=".ui.dashboard.Load_screen">

    <!-- Logo con diseño profesional y minimalista -->

    <!-- Título principal con mejor estilo -->

    <!-- Subtítulo con estilo elegante -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="256dp"
        android:layout_height="241dp"
        android:contentDescription="@string/app_name"

        android:src="@drawable/logo_png"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.08"
        android:shadowColor="#60000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:text="@string/app_name"
        android:textColor="@color/text_logo"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage" />

    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cuidando lo que más amas"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.15"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de progreso moderna -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/text_logo"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/appSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto de carga -->
    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargando..."
        android:textSize="13sp"
        android:textColor="@color/text_logo"
        android:fontFamily="sans-serif"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor de copyright -->
    <LinearLayout
        android:id="@+id/copyrightContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Línea divisoria decorativa -->
        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="#20FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Texto de copyright principal -->
        <TextView
            android:id="@+id/copyrightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 Tu Compañía. Todos los derechos reservados."
            android:textSize="11sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.05"
            android:gravity="center" />

        <!-- Versión de la app -->
        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versión 1.0.0"
            android:textSize="10sp"
            android:textColor="#80FFFFFF"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="6dp"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>