<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7FC"
    tools:context=".ui.dashboard.Biography_Animal">

    <!-- ScrollView para contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- Header con imagen de fondo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/headerCard"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivPetImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    android:contentDescription="Imagen de mascota" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay" />

                <!-- Botón de regresar -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/round_button_bg"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Regresar"
                    android:elevation="4dp" />

            </androidx.cardview.widget.CardView>

            <!-- Card de información principal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mainInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/headerCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Nombre y edad -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvPetName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Max"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#2D3142" />

                        <ImageView
                            android:id="@+id/ivFavorite"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_favorite_border"
                            android:contentDescription="Favorito"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Características rápidas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <!-- Edad -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar"
                                android:tint="#6C63FF"
                                android:contentDescription="Edad" />

                            <TextView
                                android:id="@+id/tvAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 años"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                        <!-- Género -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_gender"
                                android:tint="#6C63FF"
                                android:contentDescription="Género" />

                            <TextView
                                android:id="@+id/tvGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Macho"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                        <!-- Tamaño -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_size"
                                android:tint="#6C63FF"
                                android:contentDescription="Tamaño" />

                            <TextView
                                android:id="@+id/tvSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mediano"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección Sobre mí -->
            <androidx.cardview.widget.CardView
                android:id="@+id/aboutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/mainInfoCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sobre la mascota"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2D3142" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Soy un perro amigable y cariñoso buscando un hogar amoroso. Me encanta jugar, salir a pasear y recibir muchos mimos. Soy bueno con niños y otras mascotas."
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Características especiales -->
            <androidx.cardview.widget.CardView
                android:id="@+id/featuresCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/aboutCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Características"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2D3142" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <!-- Vacunado -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/feature_bg">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_vaccine"
                                android:tint="#6C63FF"
                                android:contentDescription="Vacunado" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vacunado"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <!-- Esterilizado -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/feature_bg">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_health"
                                android:tint="#6C63FF"
                                android:contentDescription="Esterilizado" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Esterilizado"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <!-- Desparasitado -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/feature_bg">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_check"
                                android:tint="#6C63FF"
                                android:contentDescription="Desparasitado" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sano"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Información de contacto -->
            <androidx.cardview.widget.CardView
                android:id="@+id/contactCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/featuresCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubicación"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2D3142" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            android:tint="#6C63FF"
                            android:contentDescription="Ubicación" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Santo Domingo, República Dominicana"
                            android:textSize="15sp"
                            android:textColor="#666666"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botón de adopción -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdopt"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:text="Solicitar Adopción"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="32dp"
                app:backgroundTint="#6C63FF"
                app:elevation="8dp"
                app:icon="@drawable/ic_heart"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/contactCard" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>